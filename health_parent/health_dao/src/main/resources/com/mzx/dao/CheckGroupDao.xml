<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mzx.dao.CheckGroupDao">

    <select id="findListByCondition" parameterType="string" resultMap="checkGroup">
        select * from t_checkGroup
        <where>
            <if test="value != null and value.length > 0">
                and code like "%"#{value}"%"
                or name like "%"#{value}"%"
                or helpCode like "%"#{value}"%"
            </if>
        </where>
    </select>

    <resultMap id="checkGroup" type="checkGroup">
        <id property="id" column="id"/>
        <collection property="checkItems" ofType="checkItem"
                    column="id"
                    select="com.mzx.dao.CheckItemDao.findCheckListByCheckGroupId"
        />
    </resultMap>

    <insert id="add" parameterType="checkGroup">
        insert into t_checkGroup(code,name,helpCode,sex,remark,attention)
        values (#{code},#{name},#{helpCode},#{sex},#{remark},#{attention})
        <selectKey resultType="int" order="AFTER" keyProperty="id" keyColumn="id">
            select last_insert_id()
        </selectKey>
    </insert>

    <insert id="addRelation" parameterType="map">
        insert into t_checkGroup_checkItem (checkItem_Id,checkGroup_Id)
        values (#{checkItemId},#{checkGroupId})
    </insert>

    <select id="findCheckItemNumByList" parameterType="list" resultType="int" >
        select count(*) from t_checkItem
        <where>
            <foreach collection="list" open="id in (" close=")" separator="," item="id">
                #{id}
            </foreach>
        </where>
    </select>

    <delete id="deleteRelation" parameterType="int">
        delete from t_checkGroup_checkItem where checkGroup_id= #{id}
    </delete>

    <select id="findSetMealNumByCheckGroupId" parameterType="int" resultType="int">
        select count(*) from t_setmeal_checkGroup where checkGroup_id = #{id}
    </select>

    <delete id="delete" parameterType="int">
        delete from t_checkGroup where id = #{id}
    </delete>

    <update id="edit" parameterType="checkGroup">
        update t_checkGroup set code = #{code},name = #{name},helpCode = #{helpCode},sex = #{sex},remark = #{remark},attention = #{attention}
        where id = #{id}
    </update>
</mapper>